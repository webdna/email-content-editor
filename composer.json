{
    "name": "webdna/craft-email-content-editor",
    "description": "A Craft CMS plugin to turn entries into emails",
    "type": "craft-plugin",
    "version": "1.0.15",
    "support": {
        "issues": "https://github.com/webdna/email-content-editor/issues?state=open",
        "source": "https://github.com/webdna/email-content-editor",
        "docs": "https://github.com/webdna/email-content-editor",
        "rss": "https://github.com/webdna/email-content-editor/releases.atom"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.4.0",
        "nystudio107/craft-code-editor": "^1.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "webdna\\craftemailcontenteditor\\": "src/"
        }
    },
    "extra": {
        "handle": "email-content-editor",
        "name": "Email Content Editor",
        "developer": "webdna",
        "documentationUrl": "https://github.com/webdna/email-content-editor",
        "class": "webdna\\craftemailcontenteditor\\EmailContentEditor"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
